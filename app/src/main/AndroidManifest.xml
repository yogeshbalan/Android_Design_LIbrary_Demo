<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yogesh.androiddesignlibrarydemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.TabbedActivity"
            android:label="@string/title_activity_tabbed"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.SnackBarDemoActivity"
            android:label="@string/title_activity_snack_bar_demo"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.CoordinatorActivity"
            android:label="@string/title_activity_coordinator"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yogesh.androiddesignlibrarydemo.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.coordinator.SimpleCoordinatorActivity"
            android:theme="@style/AppTheme.SimpleCoordinatorTheme" />
        <activity android:name=".activity.coordinator.MaterialUpConceptActivity" />
        <activity android:name=".activity.coordinator.SwipeBehaviorExampleActivity" />
        <activity
            android:name=".activity.BottomSheetActivity"
            android:label="@string/title_activity_bottom_sheet"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yogesh.androiddesignlibrarydemo.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.CustomBehaviorActivity"
            android:label="@string/title_activity_custom_behavior"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yogesh.androiddesignlibrarydemo.activity.MainActivity" />
        </activity>
    </application>

</manifest>